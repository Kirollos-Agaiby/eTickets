@model Movie

@{
    ViewData["Title"] = "Add a new movie";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Movie</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="SaveNew">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ImageURL" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageURL" class="control-label"></label>
                        <input asp-for="ImageURL" value="@Model.ImageURL" class="form-control" />
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" value="@Model.Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" value="@Model.Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" value="@Model.Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MovieCategory" class="control-label"></label>
                        <input asp-for="MovieCategory" value="@Model.MovieCategory" class="form-control" />
                        <span asp-validation-for="MovieCategory" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="CinemaId" class="control-label"></label>                        
                        <select name="CinemaId" class="form form-control">
                            @foreach (var item in ViewBag.cinemas)
                            {
                                <option value="@item.Id"> @item.Name</option>
                            }
                        </select>
                        <span asp-validation-for="CinemaId" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ProducerId" class="control-label"></label>
                        <select name="ProducerId" class="form form-control">
                            @foreach (var item in ViewBag.producers)
                            {
                                <option value="@item.Id"> @item.FullName</option>
                            }
                        </select>
                        <span asp-validation-for="ProducerId" class="text-danger"></span>
                    </div>
                    

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
